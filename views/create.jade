extends index
block content
	form(method="POST",action='/register',name='register',id="reg")
		h3 Title should be concise, elaborate in the description.
		input(class="form-control",type='text',name='title',placeholder="Category Title")
		h3 Describe the category, read wiki for details
		textarea(class="form-control",rows="5",id="pass",type='textbox',name='description',placeholder="Description")
		input(class="form-control",id="con_pass",type='password',name='re-pass',placeholder="Confirm Password")
		input(class="form-control",type='email',name='email',placeholder="Email")
		input(class="btn btn-lg btn-primary btn-block",type='submit',name='re-pass')